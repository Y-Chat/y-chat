{
  "name": "messaging-service",
  "version": "1.0.0",
  "scripts": {
    "generate": "npm run generate-openapi && npm run generate-asyncapi",
    "generate-openapi": "npx openapi-generator-cli generate -i ../openapi.yml -g spring -o generated-openapi --type-mappings=string+date-time=LocalDateTime,string+ObjectId=UUID --additional-properties=delegatePattern=true,serializableModel=true,useJakartaEe=true,useSpringBoot3=true,useSwaggerUI=false,interfaceOnly=false,documentationProvider=none,performBeanValidation=true,useBeanValidation=true,dateLibrary=java8-localdatetime",
    "generate-asyncapi": "npx asyncapi generate fromTemplate ../asyncapi.yml @asyncapi/java-spring-template -o generated-asyncapi",
    "dockerbuild": "gradlew build && docker build --build-arg JAR_FILE=build/libs/*.jar -t ychat/messaging-service ."
  },
  "dependencies": {
    "@asyncapi/cli": "^1.2.29",
    "@openapitools/openapi-generator-cli": "^2.7.0"
  }
}
